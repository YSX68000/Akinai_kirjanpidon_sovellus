<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sakura"
    android:gravity="center_horizontal"
    tools:context=".KausiveroilmoitusActivity">

        <!-- カレンダー選択のためのUI -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/startDateButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:textSize="10dp"
        android:text="Alkamispäivä" />


    <Button
        android:id="@+id/endDateButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:text="Päättymispäivä" />

    <Button
        android:id="@+id/fetchDataButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="10dp"
        android:text="Hae" />
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
    <TextView
        android:id="@+id/totalTaxPurchaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ostosta arvonlisäverot: "
        android:textSize="18dp"
        android:textColor="@color/aka"
        android:textStyle="bold"
        android:background="@drawable/underline"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/purchaseRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/totalTaxSalesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Myynista arvonlisäverot: "
        android:textSize="18dp"
        android:textColor="@color/midori"
        android:textStyle="bold"
        android:background="@drawable/underline"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/salesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/netTaxTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maksettava/Palautettava arvonlisäverot: "
        android:textColor="@color/kuro"
        android:textStyle="bold"
        android:background="@drawable/underline"
        android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>